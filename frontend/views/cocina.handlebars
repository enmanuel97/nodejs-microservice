<div class="container">
	<div class="row">
		<div class="col-md-12 text-center pt-5">
			<h1 class="mb-4">{{description}}</h1>
			<h3 class="mb-4">Ultimos pedidos</h3>
		</div>
		<div class="col-md-12 pt-5">
			<div class="row">
				<div class="col-md-3">
					<h3>Ingredientes</h3>
					<ul class="list-group" id="lista-ingredientes">
						{{#each ingredients}}
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<a href="javascript:void(0);" data-id="{{id}}" data-name="{{name}}" class="ingredient">
								{{name}}
							</a>
							<span class="badge bg-primary rounded-pill">{{cantidad}}</span>
						</li>
						{{/each}}
					</ul>
					<a href="/cocina/historial-pedidos" class="btn btn-primary w-100 mt-3">Ver historial de pedidos</a>
				</div>
				<div class="col-md-9">
					<div class="row" id="#ultimos-pedidos">
						{{#if pedidos.length}}
							{{#each pedidos}}
								<div class="col-md-4 pb-4">
									<div class="card">
										<h5 class="card-header">Orden # {{id}}</h5>
										<div class="card-body">
											<h5 class="card-title">{{recetaName}}</h5>
											<ul class="list-group">
												{{#each (stringToArray recetaIngredients)}}
												<li class="list-group-item d-flex justify-content-between align-items-center">
													{{name}}
													<span class="badge bg-primary rounded-pill">{{quantity}}</span>
												</li>
												{{/each}}
											</ul>
											{{#if status}}
												<button type="button" data-id="{{id}}" class="btn btn-primary w-100 mt-3 start-preparation">Empezar preparacion</button>
											{{else}}
												<button type="button" data-id="{{id}}" class="btn btn-success w-100 mt-3">En Proceso</button>
											{{/if}}
										</div>
									</div>
								</div>
							{{/each}}
						{{else}}
							<div class="col-md-12 text-center">
								<h3>No hay pedidos</h3>
							</div>
						{{/if}}
					</div>
				</div>
			</div>
		</div>
		<!-- Modal -->
		<div class="modal fade" id="history-modal" tabindex="-1" aria-labelledby="history-modal-label" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="history-modal-label">Historial de Compras <span id="ingredient-name">/ Tomate</span></h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						<div class="row">
							<div class="col-md-12"> 
								<table class="table table-bordered mb-0">
									<thead>
										<tr>
											<th>Fecha</th>
											<th>Cantidad</th>
										</tr>
									</thead>
									<tbody id="historial-table">
										
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>